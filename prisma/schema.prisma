// prisma/schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

// =========================================================
// 1. MODELOS OBRIGATÓRIOS DO NEXT-AUTH (Para Autenticação)
// =========================================================

model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? // @db.Text
    access_token      String? // @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? // @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

// =========================================================
// 2. MODELOS DO COOKUP (Seu Projeto)
// =========================================================

model User {
    id            String    @id @default(cuid()) // T3 usa String/CUID geralmente
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    
    // Seus campos personalizados
    username      String?   @unique
    nickname      String?
    role          String    @default("USER")
    bio           String?   
    
    createdAt     DateTime  @default(now())

    // Relacionamentos
    accounts      Account[]
    sessions      Session[]
    posts         PostReceita[]
    reviews       Review[]
    savedRecipes  PostReceita[] @relation("SavedRecipes")
    following     Follow[]      @relation("following")
    followedBy    Follow[]      @relation("followedBy")
}

model PostReceita {
    id          Int      @id @default(autoincrement())
    title       String
    ingredients String
    body        String
    status      String?  @default("DRAFT")
    createdAt   DateTime @default(now())

    // Campos para a Home Page (T3 Stack recomenda camelCase)
    imageUrl    String?
    category    String?
    prepTime    String?

    // Relacionamento com User
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String

    reviews Review[]
    savedBy User[]   @relation("SavedRecipes")
}

model Review {
    id        Int      @id @default(autoincrement())
    title     String
    body      String
    rate      Int
    createdAt DateTime @default(now())

    user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId     String
    
    receita    PostReceita @relation(fields: [id_receita], references: [id], onDelete: Cascade)
    id_receita Int

    @@unique([userId, id_receita])
}

model Follow {
    created_at DateTime @default(now())

    following_user_id String
    following         User   @relation("following", fields: [following_user_id], references: [id], onDelete: Cascade)

    followed_user_id  String
    followedBy        User   @relation("followedBy", fields: [followed_user_id], references: [id], onDelete: Cascade)

    @@id([following_user_id, followed_user_id])
}