datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Enum para tipos de usu√°rio
enum Role {
  USER
  ADMIN
}

model Account {
  id                 Int      @id @default(autoincrement())
  userId             Int
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?   // Campo para token de refresh
  access_token       String?   // Campo para token de acesso
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String?  @unique
  emailVerified DateTime?
  image     String?
  username  String?  @unique // Campo customizado
  nickname  String?  // Campo customizado
  role      Role     @default(USER) // Campo customizado
  bio       String?  // Campo customizado
  createdAt DateTime @default(now()) // Campo customizado
  posts          PostReceita[]
  reviews        Review[]
  savedRecipes   PostReceita[] @relation("SavedRecipes")
  following      Follow[]      @relation("following")
  followedBy     Follow[]      @relation("followedBy")
  accounts       Account[]
  sessions       Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
  @@map("VerificationToken")
}

model PostReceita {
  id          Int      @id @default(autoincrement())
  title       String
  ingredients String
  body        String
  status      String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  reviews     Review[]
  savedBy     User[]   @relation("SavedRecipes")
}

model Review {
  id         Int      @id @default(autoincrement())
  title      String
  body       String
  rate       Int
  status     String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  receita    PostReceita @relation(fields: [id_receita], references: [id])
  id_receita Int
  @@unique([userId, id_receita])
}

model Follow {
  created_at       DateTime @default(now())
  following_user_id Int
  following         User @relation("following", fields: [following_user_id], references: [id])
  followed_user_id  Int
  followedBy        User @relation("followedBy", fields: [followed_user_id], references: [id])
  @@id([following_user_id, followed_user_id])
}
